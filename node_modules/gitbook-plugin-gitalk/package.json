{
  "title": "Gitalk",
  "name": "gitbook-plugin-gitalk",
  "description": "",
  "main": "index.js",
  "browser": "./_assets/plugin.js",
  "version": "1.0.0",
  "engines": {
    "gitbook": "*"
  },
  "dependencies": {
    "gitalk": "^1.4.1",
    "react": "^15.3.2",
    "react-disqus-thread": "^0.4.0"
  },
  "devDependencies": {
    "gitbook-plugin": "^4.0.0-alpha.0",
    "eslint": "3.7.1",
    "eslint-config-gitbook": "1.4.0"
  },
  "homepage": "https://github.com/draveness/gitbook-plugin-gitalk",
  "repository": {
    "type": "git",
    "url": "https://github.com/draveness/gitbook-plugin-gitalk.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/draveness/gitbook-plugin-gitalk/issues"
  },
  "keywords": [
    "gitbook:social"
  ],
  "scripts": {
    "build-js": "gitbook-plugin build ./src/index.js ./_assets/plugin.js",
    "prepublish": "npm run build-js"
  },
  "gitbook": {
    "properties": {
      "repo": {
        "type": "string",
        "required": true
      },
      "owner": {
        "type": "string",
        "required": true
      },
      "clientID": {
        "type": "string",
        "required": true
      },
      "clientSecret": {
        "type": "string",
        "required": true
      }
    },
    "page": {
      "title": "Gitalk configuration for this page",
      "properties": {
        "disqus": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Enable Gitalk comments for this page.",
              "default": true
            },
            "permalink": {
              "type": "string",
              "title": "Identifier for this page.",
              "description": "Tells the Gitalk service how to identify the current page"
            }
          }
        }
      }
    }
  }
}
